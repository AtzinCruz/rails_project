<div class = "container">
  <p style="color: green"><%= notice %></p>

  <%= render @post %>

  <div>
    <%= link_to "Edit this post", edit_post_path(@post), class:"btn" %> |
    <%= link_to "Back to posts", posts_path, class: 'btn' %>

    <%= button_to "Destroy this post", @post, method: :delete, class: 'btn btn-primary' %>
  </div>
</div>